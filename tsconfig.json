{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "src",
    "scripts",
    "tests",
    "examples",
    "test-quick.ts",
    "*.config.ts",
    "tsup.config.v2.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
